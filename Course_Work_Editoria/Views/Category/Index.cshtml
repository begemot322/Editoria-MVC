@model IEnumerable<Category>

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Список категорий
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Создать категорию</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Название категории
                </th>
                <th>
                    Описание
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <div class="w-90 btn-group" >
                            <a asp-controller="Category" asp-action="Upsert" asp-route-CategoryId="@category.CategoryId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Изменить
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-CategoryId="@category.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


