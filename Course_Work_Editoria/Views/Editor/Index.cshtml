@model EditorListViewModel

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Список редакторов
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Editor" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Добавить редактора</a>
        </div>
    </div>
    <form method="get" class="mb-3">
        <div class="row g-2">
            <div class="col-md-5">
                <input type="text" name="name" value="@Model.Name" class="form-control" placeholder="Имя редактора" />
            </div>
            <div class="col-md-5">
                <input type="text" name="email" value="@Model.Email" class="form-control" placeholder="Email редактора" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary mt-1"> <i class="bi bi-filter-circle"></i>Фильтровать</button>
            </div>
        </div>
    </form>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var editor in Model.Editors)
            {
                <tr>
                    <td>@editor.Name</td>
                    <td>@editor.Surname</td>
                    <td>@editor.Email</td>
                    <td>
                        <div class="w-90 btn-group">
                            <a asp-controller="Editor" asp-action="Upsert" asp-route-EditorId="@editor.EditorId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Изменить
                            </a>
                            <a asp-controller="Editor" asp-action="Delete" asp-route-EditorId="@editor.EditorId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>