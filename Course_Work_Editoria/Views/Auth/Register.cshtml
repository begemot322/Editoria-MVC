@model RegisterUserRequestVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-black ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white mt-1">Register</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="register" method="post" enctype="multipart/form-data">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">
                            Create a new account.
                        </h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="RegisterUserRequest.UserName" class="form-control" placeholder="Username" />
                            <label asp-for="RegisterUserRequest.UserName" class="form-label">Username</label>
                            <span asp-validation-for="RegisterUserRequest.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="RegisterUserRequest.Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="RegisterUserRequest.Email" class="form-label">Email</label>
                            <span asp-validation-for="RegisterUserRequest.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="RegisterUserRequest.Password" class="form-control" type="password" placeholder="Password" />
                            <label asp-for="RegisterUserRequest.Password" class="form-label">Password</label>
                            <span asp-validation-for="RegisterUserRequest.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="RegisterUserRequest.PhoneNumber" class="form-control" type="tel" placeholder="+7XXXXXXXXXX" />
                            <label asp-for="RegisterUserRequest.PhoneNumber" class="form-label">Phone Number</label>
                            <span asp-validation-for="RegisterUserRequest.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="RegisterUserRequest.Role" asp-items="Model.Roles" class="form-control">
                                <option disabled selected>-- Выберите роль --</option>
                            </select>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="file" name="imageFile" asp-for="RegisterUserRequest.ImageUrl" class="form-control border-0 shadow w-50" />
                            <label asp-for="RegisterUserRequest.ImageUrl" class="ms-2"></label>
                        </div>
                        <div>
                            <button id="register-submit" type="submit" class="w-25 btn btn-sm btn-primary fs-5">Register</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}