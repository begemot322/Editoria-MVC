@model Advertisement

<form method="post">
    <input asp-for="AdvertisementId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удалить объявление</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Type" class="p-0">Тип</label>
            <input asp-for="Type" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Text" class="p-0">Текст объявления</label>
            <textarea asp-for="Text" disabled class="form-control" rows="5"></textarea>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Cost" class="p-0">Стоимость</label>
            <input asp-for="Cost" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Issue.IssueId" class="p-0">Номер выпуска</label>
            <input asp-for="Issue.IssueId" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-3">
                <button type="submit" class="btn btn-danger form-control">Удалить</button>
            </div>
            <div class="col-3">
                <a asp-controller="Advertisement" asp-action="Index" class="btn btn-outline-secondary form-control">Вернуться назад</a>
            </div>
        </div>
    </div>
</form>