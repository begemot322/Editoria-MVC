@model IEnumerable<Tag>

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Список тегов
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Tag" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Создать тег
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Название тега
                </th>
                <th>
                    Описание
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    <td>@tag.Name</td>
                    <td>@tag.Description</td>
                    <td>
                        <div class="w-90 btn-group">
                            <a asp-controller="Tag" asp-action="Upsert" asp-route-tagId="@tag.TagId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Изменить
                            </a>
                            <a asp-controller="Tag" asp-action="Delete" asp-route-tagId="@tag.TagId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>