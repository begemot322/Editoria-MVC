@model IEnumerable<Article>

<h1 class="text-center fw-bold my-4">СПИСОК СТАТЕЙ</h1>

<div class="row pb-3 mb-5">
    @foreach (var article in Model)
    {
        <div class="col-lg-3 col-sm-6 d-flex">
           <div class="row p-2 w-100">
               <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded h-100 d-flex flex-column">
                        <img src="@(string.IsNullOrEmpty(article.ImageUrl) ? "/images/articles/no_image_Article.jpg" : article.ImageUrl)"
                             class="card-img-top rounded" style="height: 400px;object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@article.Title</p>
                                <p class="card-title text-warning text-center">Автор: <b>@article.Author.Name @article.Author.Surname</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">Газета: @article.Issue.Newspaper.Name</p>
                            </div>
                        </div>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-articleId="@article.ArticleId"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Подробнее
                            </a>
                        </div>
                   </div>
               </div>
           </div>
        </div>
    }
</div>


