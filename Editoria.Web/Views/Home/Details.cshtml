@model Article

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">
            <i class="bi bi-book"></i> Содержание статьи
        </h2>
        <hr />
    </div>

    <div class="d-flex align-items-start">
        <img src="@(string.IsNullOrEmpty(@Model.ImageUrl) ? "/images/articles/no_image_Article.jpg" : @Model.ImageUrl)"
             class="img-fluid rounded me-3" style="height: 250px; max-width:200px; object-fit: cover;" />
        <div class="flex-grow-1">
            <textarea asp-for="Text" disabled class="form-control" rows="8"></textarea>
        </div>
    </div>

    <div class="row pb-2 mt-5">
        <h2 class="text-secondary fs-4">
            <i class="bi bi-chat-square-text"></i> Мнение автора по имени @Model.Author.Name
        </h2>
        <div class="mb-3 row">
            <p class="form-control bg-white">@Model.AuthorComment</p>
        </div>
    </div>



    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border border-dark">
        <i class="bi bi-arrow-left"></i> Назад
    </a>

</div>
