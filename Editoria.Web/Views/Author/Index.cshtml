@model IEnumerable<Author>

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Список авторов
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Author" asp-action="Upsert" class="btn btn-primary" policy="ModeratorPolicy"><i class="bi bi-plus-circle"></i>Добавить автора</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Возраст</th>
                <th>Email</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Author" asp-action="Details" asp-route-AuthorId="@author.AuthorId">
                            @author.Name @author.Surname
                        </a>
                    </td>
                    <td>
                        @((DateTime.Now.Year - author.DateOfBirth.Year) - (DateTime.Now.DayOfYear < author.DateOfBirth.DayOfYear ? 1 : 0)) лет
                    </td>
                    <td>@author.Email</td>
                    <td>@author.Phone</td>
                    <td>
                        <div class="w-90 btn-group">
                            <a asp-controller="Author" asp-action="Upsert" asp-route-AuthorId="@author.AuthorId" class="btn btn-primary mx-2" policy="ModeratorPolicy">
                                <i class="bi bi-pencil-square"></i>Изменить
                            </a>
                            <a asp-controller="Author" asp-action="Delete" asp-route-AuthorId="@author.AuthorId" class="btn btn-danger mx-2" policy="AdminPolicy">
                                <i class="bi bi-trash-fill"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>