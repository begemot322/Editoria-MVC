@model Tag

<form asp-action="Upsert" method="post">
    <input asp-for="TagId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@((Model.TagId != 0) ? "Обновить тег" : "Добавить тег")</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="form-label">Имя</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Popularity" class="form-label">Популярность (от 1 до 5)</label>
            <input asp-for="Popularity" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Popularity" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.TagId != 0 ? "Обновить" : "Создать")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-outline-secondary form-control">Вернуться назад</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}